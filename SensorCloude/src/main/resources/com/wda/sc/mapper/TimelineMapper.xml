<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wda.sc.mapper.TimelineMapper">

	<select id="getList" resultType="com.wda.sc.domain.timelineVO">
		select timeline.content,
        substr(time,0,14) as time,
        member.name
from timeline
       ,member
where timeline.user_id = member.user_id
	</select>


<insert id="timeline" parameterType="com.wda.sc.domain.timelineVO">
		insert into TIMELINE(user_id,content) values(#{user_id},#{content})
	</insert>
	
</mapper>